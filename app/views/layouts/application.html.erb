<!DOCTYPE html>
<html>
<head>
  <title>Mymenu</title>
  <%= stylesheet_link_tag	'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

<header class="header">
	<div class="container">
	<div class="header-left">
		<span class="header-item">
		  <h1 class="title">
		        <strong><a href="/"><%= @title %></a></strong>
		  </h1>
		</span>
	</div>
	<div class="header-right header-menu">
	  <span class="header-item">
	    <a href="/list/" class="button is-success is-inverted js-shopping">
	      <i class="fa fa-shopping-cart"></i>Shopping List
	    </a>
	  </span>
	</div>
	</div>
</header>
<%= yield %>

</body>
</html>

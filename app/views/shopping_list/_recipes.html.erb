<div class="container">
<div class="columns">
<% @recipes.each do |r| %>
    <div class="card js-recipe" data-type-id=<%="#{r.id}"%>>

	  <div class="card-image">
	    <figure class="image is-4by3">
	      <img class="" src=<%="#{r.image_url}"%> alt=<%="#{r.title}"%>>
	    </figure>
	  </div>
	  <div class="card-content">
	    <div class="media">
	      <!-- <div class="media-left">  
	      </div> -->
	      <div class="media-content">
	        <div class="title is-5"><%=r.title%></div>
	        <div class="subtitle is-6">
			<!-- <a href="#" class="icon is-small is-pulled-left"><i class="fa fa-heart"></i></a> -->
	        <a class="" href=<%="#{r.source_url}"%> target="blank">[origin]</a></div>
	      </div>
	    </div>

	  </div>  
	</div>&nbsp;
<% end %>
</div>
<br>
</div>